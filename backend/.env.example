DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Security - REQUIRED IN PRODUCTION
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# CRITICAL: This MUST be set in production. Application will fail to start without it.
SECRET_KEY=your-secret-key-MUST-BE-SET-IN-PRODUCTION

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# reCAPTCHA Configuration
# Get your keys from: https://www.google.com/recaptcha/admin
# Use reCAPTCHA v2 "I'm not a robot" Checkbox
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here
# Set to 'development' to bypass CAPTCHA verification
ENVIRONMENT=development

# Email Configuration
# For Gmail: Use your Gmail address and an App Password (not your regular password)
# Generate App Password at: https://myaccount.google.com/apppasswords
# For other providers (SendGrid, Mailgun, etc.), adjust settings accordingly
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_FROM=noreply@salesorder.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# Twilio SMS Configuration (Optional)
# Get your credentials from: https://console.twilio.com
# Leave empty to disable SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
